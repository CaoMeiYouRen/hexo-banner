{
  "name": "hexo-banner",
  "version": "1.1.1",
  "description": "Add a custom banner at the top of each page that supports HTML and Markdown formatted text content",
  "author": "CaoMeiYouRen",
  "private": false,
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint src --fix --ext .ts,.js,.cjs,.mjs",
    "release": "semantic-release",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsup",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "dev:tsup": "cross-env NODE_ENV=development tsup --watch",
    "start": "node ./dist/index",
    "start:tsx": "cross-env NODE_ENV=production tsx src/index.ts",
    "commit": "cz",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.12",
    "@types/hexo": "^3.8.12",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-cmyr-config": "^2.1.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-conventional-changelog-cmyr": "^1.1.1",
    "debug": "^4.3.7",
    "eslint": "^8.57.1",
    "eslint-config-cmyr": "^1.1.32",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "semantic-release": "21.0.1",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-cmyr"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "keywords": [
    "hexo",
    "banner",
    "template"
  ],
  "homepage": "https://github.com/CaoMeiYouRen/hexo-banner#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/hexo-banner.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/hexo-banner/issues"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "marked": "^14.1.3",
    "tslib": "^2.8.0"
  },
  "pnpm": {
    "overrides": {
      "compare-func": "^2.0.0"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "commonjs",
  "hexo": {
    "version": ">= 3.0.0",
    "type": "plugin"
  },
  "peerDependencies": {
    "hexo": ">= 3.0.0"
  }
}
